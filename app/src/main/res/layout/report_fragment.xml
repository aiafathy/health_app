<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/cairo_bold"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:text="من فضلك حدد نوع التقرير أولا "
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/type_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_description"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="نوع التقرير"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp" />

    <com.reginald.editspinner.EditSpinner
        android:id="@+id/spinner_report_type"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_below="@id/text_description"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/background_edit"
        android:drawableStart="@drawable/arrow"
        android:editable="false"
        android:fontFamily="@font/cairo_bold"
        android:hint=" تقرير   أ"
        android:paddingStart="@dimen/_6sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:textColor="@color/greenblue"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:dropDownDrawableHeight="@dimen/_6sdp"
        app:dropDownDrawableSpacing="@dimen/_15sdp"
        app:dropDownDrawableWidth="@dimen/_10sdp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_report_type"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_24sdp"
        android:orientation="vertical" />

</RelativeLayout>